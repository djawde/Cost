<body>
    <div class="calculator">
        <h2>حاسبة تكلفة الدفع عند الاستلام</h2>
        <form id="costCalculatorForm">
            <label for="productPrice">سعر المنتج (DZD):</label>
            <input type="number" id="productPrice" name="productPrice" required>
            
            <label for="codFee">رسوم الدفع عند الاستلام (DZD):</label>
            <input type="number" id="codFee" name="codFee" required>
            
            <label for="handlingFee">رسوم التعامل والتغليف (DZD):</label>
            <input type="number" id="handlingFee" name="handlingFee" required>
            
            <label for="customsFee">رسوم الشحن الجمركي (DZD):</label>
            <input type="number" id="customsFee" name="customsFee" required>
            
            <label for="packagingFee">رسوم التغليف والتغليف الخاص (DZD):</label>
            <input type="number" id="packagingFee" name="packagingFee" required>
            
            <label for="returnShippingFee">رسوم شحن الإرجاع (DZD):</label>
            <input type="number" id="returnShippingFee" name="returnShippingFee" required>
            
            <label for="shippingCost">تكلفة الشحن (DZD):</label>
            <input type="number" id="shippingCost" name="shippingCost" required>
            
            <label for="remoteAreaSurcharge">رسوم المناطق النائية (DZD):</label>
            <input type="number" id="remoteAreaSurcharge" name="remoteAreaSurcharge" required>
            
            <button type="button" onclick="calculateTotalCost()">حساب التكلفة الإجمالية</button>
        </form>
        
        <h2>التكلفة الإجمالية: <span id="totalCost">0</span> DZD</h2>
    </div>

    <script>
        function calculateTotalCost() {
            const productPrice = parseFloat(document.getElementById('productPrice').value);
            const codFee = parseFloat(document.getElementById('codFee').value);
            const handlingFee = parseFloat(document.getElementById('handlingFee').value);
            const customsFee = parseFloat(document.getElementById('customsFee').value);
            const packagingFee = parseFloat(document.getElementById('packagingFee').value);
            const returnShippingFee = parseFloat(document.getElementById('returnShippingFee').value);
            const shippingCost = parseFloat(document.getElementById('shippingCost').value);
            const remoteAreaSurcharge = parseFloat(document.getElementById('remoteAreaSurcharge').value);

            let totalCost = productPrice + codFee + handlingFee + customsFee + packagingFee + returnShippingFee + shippingCost + remoteAreaSurcharge;

            document.getElementById('totalCost').textContent = totalCost.toFixed(2);
        }
    </script>
